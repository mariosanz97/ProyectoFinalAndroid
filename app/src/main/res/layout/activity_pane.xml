<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mario.appAdidas.PaneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87mm"
            android:id="@+id/fragments" >

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.mario.appAdidas.Fragments.PantalonesFragment"
                android:id="@+id/pantalones" />

            <fragment
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:name="com.example.mario.appAdidas.Fragments.ZapatillasFragment"
                android:id="@+id/zapatillas" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.example.mario.appAdidas.Fragments.SudaderasFragment"
                android:id="@+id/sudaderas" />

        </RelativeLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_below="@+id/fragments"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/colorPrimary"
            android:padding="10sp"
            android:src="@mipmap/adidas_logo" />

        <ListView
            android:background="#ffffff"
            android:id="@+id/list_view"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
